{{!
    @template mod_cloudstudio/tab/licao

    Example context (json):
    {
      "data": [
        {
          "enunciado": "Qual é a capital da França?",
          "alternativas": [
            {
              "letra": "A",
              "alternativa": "Berlim",
              "correta": "Yes"
            }
          ],
          "feedback": "A resposta correta é Paris, que é a capital da França."
        }
      ]
    }
}}
<div class="area-questoes">
    {{#data}}
        <fieldset class="area-questao">
            <legend class="enunciado">{{{enunciado}}}</legend>

            <div class="alternativas">
                {{#alternativas}}
                    <div class="alternativa {{{correta}}}">
                        <div>{{{letra}}}<span>: </span></div>
                        <label>{{{alternativa}}}</label>
                    </div>
                {{/alternativas}}
            </div>
            <p class="explicacao">{{{feedback}}}</p>
        </fieldset>
    {{/data}}
</div>